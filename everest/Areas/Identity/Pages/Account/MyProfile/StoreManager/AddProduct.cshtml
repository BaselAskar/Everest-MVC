@page
@model everest.Areas.Identity.Pages.Account.MyProfile.StoreManager.AddProductModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section Styles{ 
    <link rel="stylesheet" href="@Url.Content("~/css/Account/MyPage/StoreManager/add-product.css")" />
}

<div class="add-product-tamblet position-relative">
    
    
    @*Back page link*@
    <a class="back-link" asp-area="Identity" asp-page="/Account/MyProfile/StoreManager/Index" title="إدارة المخزن"><i class="bi bi-arrow-left"></i></a>

    <h1 class="text-center text-info p-3">إضافة مادة</h1>

    <div class="control-group file-upload mb-5" id="file-upload1">
        <div class="image-box main-image-box text-center">
            <div class="upload-box">
                <p>الصورة الرئيسية<br /><span><i class="bi bi-cloud-upload"></i></span></p>
            </div>
            <img class="d-none" src="#" alt="product-image" />
            <input type="file" class="file-image" name="file-image1" />
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="control-group file-upload col-3" id="file-upload2">
                <div class="image-box text-center">
                    <div class="upload-box">
                        <p>صورة<br /><span><i class="bi bi-cloud-upload"></i></span></p>
                    </div>
                    <img class="d-none" src="#" alt="product-image" />
                    <input type="file" class="file-image" name="file-image2" />
                </div>
            </div>

            <div class="control-group file-upload col-3" id="file-upload3">
                <div class="image-box text-center">
                    <div class="upload-box">
                        <p>صورة<br /><span><i class="bi bi-cloud-upload"></i></span></p>
                    </div>
                    <img class="d-none" src="#" alt="product-image" />
                    <input type="file" class="file-image" name="file-image3" />
                </div>
            </div>

            <div class="control-group file-upload col-3" id="file-upload4">
                <div class="image-box text-center">
                    <div class="upload-box">
                        <p>صورة<br /><span><i class="bi bi-cloud-upload"></i></span></p>
                    </div>
                    <img class="d-none" src="#" alt="product-image" />
                    <input type="file" class="file-image" name="file-image4" />
                </div>
            </div>

            <div class="control-group file-upload col-3" id="file-upload5">
                <div class="image-box text-center">
                    <div class="upload-box">
                        <p>صورة<br /><span><i class="bi bi-cloud-upload"></i></span></p>
                    </div>
                    <img class="d-none" src="#" alt="product-image" />
                    <input type="file" class="file-image" name="file-image5" />
                </div>
            </div>
        </div>
    </div>

    <form class="container-fluid form-add-product">
        <div class="row form-group d-flex justify-content-center m-3 mt-5">
            <div class="col-md-2">
                <label class="form-label" asp-for="Input.Name"></label>
            </div>
            <div class="col-md-6">
                <input class="form-control text-center" asp-for="Input.Name" />
            </div>
        </div>
        <div class="row form-group d-flex justify-content-center m-3">
            <div class="col-md-2">
                <label class="form-label" asp-for="Input.Description"></label>
            </div>
            <div class="col-md-6">
                <input class="form-control text-center" asp-for="Input.Description" />
            </div>
        </div>
        <div class="row form-group d-flex justify-content-center m-3">
            <div class="col-md-2">
                <label class="form-label" asp-for="Input.Classification"></label>
            </div>
            <div class="col-md-6">
                <select class="form-select text-center" asp-for="Input.Classification">
                    @foreach (var cl in Model.Classifications)
                    {
                        <option value="@cl.Title-@cl.Name">@cl.Title-@cl.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="row form-group d-flex justify-content-center m-3">
            <div class="col-md-2">
                <label class="form-label">السعر: </label>
            </div>
            <div class="col-md-6">
                <input class="form-control text-center" asp-for="Input.Price" />
            </div>
        </div>
        <div class="row form-group d-flex justify-content-center m-3">
            <div class="col-md-2">
                <label class="form-label">العملة: </label>
            </div>
            <div class="col-md-6">
                <input class="form-control text-center" list="currencies" asp-for="Input.Currency" />
                <datalist id="currencies">
                    <option value="دولار $"></option>
                    <option value="تركي TL"></option>
                    <option value="سوري SYL"></option>
                </datalist>
            </div>
        </div>

        <div class="row form-group mt-3">
            <div class="col-md-4"></div>
            <div class="check-input">
                <input type="checkbox" name="is-allowed" checked asp-for="Input.IsAllowed" />
            </div>
            <div class="col-1">
                <label class="form-label" asp-for="Input.IsAllowed"></label>
            </div>
        </div>
        <div class="form-group d-flex justify-content-around m-5">
            <button type="submit" class="btn btn-success btn-add-product">
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                <span class="btn-text">إضافة</span>
            </button>
            <button type="reset" class="btn btn-danger btn-cancel-product">
                إلغاء
            </button>
        </div>
    </form>
</div>



@section Scripts{
    <script src="@Url.Content("~/js/Account/MyPage/StoreManager/add-product.js")" ></script>
}
