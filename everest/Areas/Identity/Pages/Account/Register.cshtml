@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model everest.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["title"] = "Register";
}

<style>
    h2 {
        text-align: center;
        padding: 30px;
    }

    .form-style {
        border: 1px solid #c5bfbf;
        display: inline-block;
        margin-left: 50%;
        transform: translateX(-50%);
        -webkit-transform: translateX(-50%);
        -o-transform: translateX(-50%);
        -moz-transform: translateX(-50%);
        background-color: gainsboro;
        border-radius: 20px;
        box-shadow: 0px 0px 22px 6px #bdbdbd;
        -webkit-box-shadow: 0px 0px 22px 6px #bdbdbd;
        -moz-box-shadow: 0px 0px 22px 6px #bdbdbd;
    }

    .form-group {
        margin: 30px;
    }

</style>

<h2 class="text-info">تسجيل مستخدم جديد</h2>

<div class="row">

    <form class="col-md-5 col-10 form-style" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="text-center">
            <img src="~/assets/user.png" class="rounded-circle my-3" style="height:40%;width:40%;max-height:150px;max-width:150px" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Input.UserName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.UserName" class="form-control" />
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Input.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.Email" class="form-control" placeholder="غير مطلوب" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Input.Password"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-8">
                    <button type="submit" class="btn btn-success form-control">تسجيل</button>
                </div>

            </div>
        </div>
    </form>
    

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}