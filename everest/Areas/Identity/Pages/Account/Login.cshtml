@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model everest.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["title"] = "Login";
}

@section Styles{ 
    <link rel="stylesheet" href="@Url.Content("~/css/Account/login.css")" />
}


<h1 class="text-info text-center p-4">تسجيل الدخول</h1>

<div class="row">
    <form class="col-md-5 col-10 form-style" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="text-center">
            <img src="~/assets/user.png" class="rounded-circle my-3" style="height:40%;width:40%;max-height:150px;max-width:150px" />
        </div>
         <div class="form-group">
             <div class="row">
                 <div class="col-4">
                     <label class="form-label" asp-for="Input.UserName"></label>
                 </div>
                 <div class="col-8">
                     <input asp-for="Input.UserName" class="form-control" />
                 </div>
             </div>
         </div>
        
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <label class="form-label" asp-for="Input.Password"></label>
                </div>
                <div class="col-8">
                    <input type="password" asp-for="Input.Password" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label"></label>
            </div>
        </div>

        <div class="form-group d-flex bd-highlight">
            <button type="submit" class="btn btn-primary me-auto p-2 bd-highlight">تسجيل الدخول</button>
            <a class="btn btn-outline-success p-2 bd-highlight" asp-area="Identity" asp-page="/Account/Register">مستخدم جديد</a> 
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}